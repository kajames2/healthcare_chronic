{
    "_COMMENT": "The filename (without extension) of the configuration file to be varied.",
    "template": "sample_template",
    "_COMMENT": "name is optional.  Gives the name of the folder the configs will go.  Uses template value by default",
    "name": "sample",
    "_COMMENT": "all_combos is optional. Defaults true.  If false, it will generate each variation alone, not every permutation of variations",
    "all_combos" : true,
    "variations" : [
        {
            "_COMMENT" : "Vary a top-level parameter",
            "max_savings" : [0, 10, 20]
        },
        {
            "_COMMENT" : "Vary a nested parameter",
            "probability:mods:0:j" : [30, 40, 50]
        },
        {
            "_COMMENT" : "Vary multiple parameters together.",
            "job:intercept": [100,68],
            "job:slope": [0, 2]
        },
        {
            "_COMMENT" : "Vary different sets of parameters together.",
            "fitnesses:0" : [
                {
                    "type": "ProportionalLoss",
                    "rate": 0.2
                },
                {
                    "type": "FlatLoss",
                    "degen": 5
                }
            ]
        },
        {
            "_COMMENT" : "Vary a list of mods fully",
            "joy:mods" : [
                [
                    {
                        "func" : "Multiply",
                        "type": "Linear",
                        "param" : "Shocks",
                        "max_modification" : 1
                    }
                ],
                [
                    {
                        "func": "Multiply",
                        "type": "Fractional",
                        "param": "Shocks",
                        "max_modification": 1,
                        "j" : 1
                    },
                    {
                        "func": "Add",
                        "type": "Constant",
                        "max_modification": 0.2
                    }
                ]
            ]
        }
    ]
}
